pipeline{
    agent any
    parameters {
        string(name:'ec2-instance',defaultValue: 'us-east-1', description: "thankyou for beign here")
    }
    stages{
        stage('build'){
            steps{
                echo "in build stage"
                echo "runnig ${env.BUILD_ID} on ${env.JENKIS_URL} " 

            }
        }
    
        stage('test'){
            steps{
                echo "in test area"
                echo "${params.name} is the name of aws service"
                
            }
        }
    
        stage(deploy){
            steps{
                echo "deploying changes"
            }
        }
    }
}