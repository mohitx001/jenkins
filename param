pipeline{
    agent any
    parameters {
        string(name:'select region ',defaultValue: 'us-east-1', description: "thankyou for beign here")
    }
    stages{
        stage('build'){
            steps{
                echo "in build stage"
                echo "runnig ${env.BUILD_ID} on ${env.JENKINS_URL} " 

            }
        }
    
        stage('test'){
            steps{
                echo "in test area"
                echo "${params.select region}in this region running "
                
            }
        }
    
        stage(deploy){
            steps{
                echo "deploying changes"
            }
        }
    }
}